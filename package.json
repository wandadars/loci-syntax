{
  "name": "loci-syntax",
  "displayName": "loci-syntax",
  "publisher": "StreamlineNumerics",
  "description": "Syntax highlighting for the Loci DSL",
  "version": "0.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/wandadars/loci-syntax.git"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "loci",
    "dsl",
    "rules",
    "syntax-highlighting",
    "cfd"
  ],
  "activationEvents": [
    "onLanguage:loci",
    "onCommand:loci-syntax.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "loci-syntax.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "loci",
        "aliases": [
          "Loci DSL",
          "Loci"
        ],
        "extensions": [
          ".loci"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "loci",
        "scopeName": "source.loci",
        "path": "./syntaxes/loci.tmlLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.cpp": "cpp"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  }
}
